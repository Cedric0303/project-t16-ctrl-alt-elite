<ul id="categories">
    {{#each menucat}}
        <li>
            {{this.category}}
        </li>
    {{/each}}
</ul>

<ul id="menu">
    {{#each menu}}
    <li>
        <div id="menuitem" class="{{this.category}}">
            <a href="/customer/menu/{{this.name}}">
                <img src="https://source.unsplash.com/{{this.image}}" 
                alt="Photo of {{#removeunderscore this.name}}{{/removeunderscore}}">
                <span>{{#removeunderscore this.name}}{{/removeunderscore}}</span>
            </a>
            <p>${{this.price}}</p>
            {{!-- https://stackoverflow.com/questions/45396280/customizing-increment-arrows-on-input-of-type-number-using-css/45396364 --}}
            <div class="number-input">
                <button onclick="this.parentNode.querySelector('input[type=number]').stepDown();preventDefault();" >
                    <i class="fas fa-minus-circle"></i>
                </button>
                <input name={{this.name}} type="number" value="0" min="0" max="99">
                <button onclick="this.parentNode.querySelector('input[type=number]').stepUp();preventDefault();">
                    <i class="fas fa-plus-circle"></i>
                </button>
            </div>
        </div>
    </li>
    {{/each}}
</ul>