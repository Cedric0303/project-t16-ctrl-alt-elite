<div class="vendorvan-container"> 
    
    <div class="welcometitle">
        <h1 id="welcometext"> Welcome! </h1>
        <a id="signoutbutton" class="hoverable" href="/vendor/{{vendor.loginID}}/logout">Sign Out</a>
    </div>

    <div id="vanname">{{vendor.vanName}}</div>

    <textarea form="form" id="vantextdescription" name="address" rows="5" placeholder="Describe van location..." autofocus>{{vendor.address}}</textarea>

    <div class="gpslocation">
        <div id="mapcontainer">
            <div id="map"></div>
        </div>
        <h1 id= "mapdescription"> GPS Location: </h1>
        <input type="submit" id="wrongadressbutton" class="hoverable" value="Wrong Address?" onclick="geolocate.trigger()">
    </div>
    
    <form id="form" class="openvanbutton" action="/vendor/{{vendor.loginID}}/open" method="post" name="form">
        <input type="hidden" name="longitude" id="longitude" value="">
        <input type="hidden" name="latitude" id="latitude" value="">
        <input onclick="submitForm(this)" class="hoverable" type="submit" id="vanbutton" value="Open Van" action="/vendor/orders">
    </form>
    <script>var van = {{{json vendor}}}</script>
    <script src="/js/vendor/map.js"></script>
    <script src="/js/vendor/openvan.js"></script>
</div>


