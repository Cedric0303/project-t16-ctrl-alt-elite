<div class="vendorvan-container"> 
    
    <div class="signout">
        <form action="/vendor/{{vendor.loginID}}/logout" id="logoutform" method="get" name="logout">
            <input type="submit" id="signoutbutton" value="Sign Out">
        </form>
    </div>
    
    <div class="welcometitle">
        <h1> Welcome! </h1>
    </div>

    <div class="vanname">
        <h1 id= "vannameid">{{vendor.vanName}} </h1>
    </div>

    <form class= "vanlocation">
        <input type="text" class="vandescriptionfield" id="vantextdescription" placeholder=" Describe your Location...{{vendor.address}}">
    </form>

    <div class="gpslocation">
        <div id="mapcontainer">
            <div id="map"></div>
        </div>
        <h1 id= "mapdescription"> GPS Location: </h1>
        <input type="submit" id="wrongadressbutton" value="Wrong Address?" onclick="geolocate.trigger()">
    </div>
    
    <div class="openvanbutton">
        <form action="/vendor/{{vendor.loginID}}" method="post" name="form">
            <input type="hidden" name="address" id="address" value="">
            <input type="hidden" name="longitude" id="longitude" value="">
            <input type="hidden" name="latitude" id="latitude" value="">
            <input onclick="submitForm()" type="submit" id="vanbutton" value="Open Van" action="vendororders">
        </form>
        
    </div>
    <script>var van = {{{json vendor}}}</script>
    <script src="/js/vendormap.js"></script>
    <script src="/js/vendorscript.js"></script>
</div>


